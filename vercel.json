{
    "version": 2,
    "builds": [
        {
            "src": "./client",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "./server/index.js",
            "use": "@vercel/node",
            "config": {
                "runtime": "nodejs16.x"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "client/build/index.html"
        }
    ]
}
