{
  "version": 2,
  "builds": [
    {
      "src": "./client",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build",
        "cleanDistDir": true
      }
    },
    {
      "src": "./server",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs16.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html"
    }
  ]
}
